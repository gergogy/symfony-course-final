{% extends '::base.html.twig' %}

{% block body %}
<div id="container">
    <div id="header">
        <div class="nav">
            <ul>
                {% if not app.user %}
                    <li><a href="{{ path('jobz_front_security_login') }}">Login</a></li>
                    <li><a href="{{ path('jobz_front_security_register') }}">Registration</a></li>
                {% else %}
                    <li><a href="{{ path('jobz_front_security_logout') }}">Logout</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('jobz_front_jobadmin_index') }}">JOBS</a></li>
                        <li><a href="{{ path('jobz_front_category_index') }}">CATEGORIES</a></li>
                        <li><a href="{{ path('jobz_front_information_index') }}">INFORMATIONS</a></li>
                        <li><a href="{{ path('jobz_front_menu_index') }}">MENUS</a></li>
                    {% endif %}
                {% endif %}
            </ul>
        </div>
        <div class="nav-menu">
            {% set menus = get_menus() %}
            {% if menus|length %}
                <ul>
                    {% for menu in menus %}
                        <li><a href="{{ path(menu.route) }}">{{ menu.title }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="clearfix"></div>
        <div class="content">
            <h1>
                <a href="{{ path('jobz_front_frontcontroller_home') }}"><img src="{{ asset('bundles/front/images/jobz.gif') }}"></a>
            </h1>
            <div id="sub_header">
                <div class="post">
                    <h2>
                        Ask for people
                    </h2>
                    <div>
                        <a href="{{ path('jobz_front_job_new') }}">Post a Job</a>
                    </div>
                </div>
                <div class="search">
                    <img src="{{ asset('bundles/front/images/ask.png') }}" alt="ask">
                    <h2>
                        Ask for a job
                    </h2>
                    <form action="" method="get">
                        <input name="keywords" id="search_keywords" class="input" type="text"><input value="search" src="{{ asset('bundles/front/images/search.png') }}" class="but_search" type="image">
                        <div class="help">
                            Enter some keywords (city, country, position, ...)
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="content">
        <div class="content">
            {% block content %}{% endblock %}
        </div>
    </div>
    <div id="footer">
        <div class="content">
            {% set infos = get_informations() %}
            {% if infos|length %}
                <ul>
                    {% for info in infos %}
                        <li{% if loop.index == infos|length %} class="last"{% endif %}><a href="{{ path('jobz_front_frontcontroller_information', { slug: info.slug }) }}">{{ info.title }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}